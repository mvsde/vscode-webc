{
	"compilerOptions": {
		// Input
		"rootDir": "src",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"allowImportingTsExtensions": true,

		// Output
		"noEmit": true,
		"module": "nodenext",
		"target": "esnext",
		"lib": ["ESNext"],
		"sourceMap": true,

		// Type Checking
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	}
}
